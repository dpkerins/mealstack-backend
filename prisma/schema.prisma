  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Plan {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  calories  Int
  protein   Int
  carbs     Int
  fat       Int
  breakfast_id Int 
  lunch_id Int
  dinner_id Int
  snack_id Int
  name String
}

model Recipe {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  label String 
  image_url String
  url String 
  yield Int
  dairyFree Boolean
  glutenFree Boolean
  peanutFree Boolean
  porkFree Boolean
  kosher Boolean
  vegan Boolean
  vegetarian Boolean
  tags String 
  ingredients String 
  totalTime Int
  cuisineType String ?
  mealType String ?
  dishType String ?
  calories Int 
  fat Int
  carbs Int
  protein Int

  @@unique([url])
}
